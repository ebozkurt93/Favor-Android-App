<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- For TextInputLayout Bottom Line Color -->
        <item name="colorControlNormal">@color/white</item>



    </style>
<!-- unlikely but may get deleted -->
    <style name="TextLabelHint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="InitialButtons">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/general_textsize</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="LoginTexts.NoField">
        <item name="android:paddingEnd">@dimen/general_marginleftright</item>
        <item name="android:paddingStart">@dimen/general_marginleftright</item>

    </style>

    <style name="LoginTexts">
        <item name="android:textSize">@dimen/general_textsize</item>
    </style>

    <style name="LoginSignupButtons">
        <item name="android:layout_marginStart">@dimen/general_marginleftright</item>
        <item name="android:layout_marginEnd">@dimen/general_marginleftright</item>
        <item name="android:background">@drawable/login_signup_button_background</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>

        <item name="android:textSize">@dimen/login_signup_buttons_textsize</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textColor">@color/login_signup_button_state_text_color</item>
        <item name="android:stateListAnimator">@animator/login_signup_button_animator</item>
    </style>

    <!-- Zeplin Styles -->



    <style name="DescriptionText">
        <item name="android:textSize">@dimen/login_signup_buttons_textsize</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingEnd">@dimen/general_marginleftright</item>
        <item name="android:paddingStart">@dimen/general_marginleftright</item>
    </style>

    <style name="SignUpTextInputLayout">
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textSize">@dimen/login_signup_buttons_textsize</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingEnd">@dimen/general_marginleftright</item>
        <item name="android:paddingStart">@dimen/general_marginleftright</item>
        <item name="android:paddingBottom">8dp</item>
      <!--  <item name="android:textAppearance">@style/TextLabelHint</item> -->
    </style>

    <style name="SignUpTextInputLayoutError">
        <item name="android:textColorHint">@color/errorText</item>
        <item name="android:textColor">@color/errorText</item>
        <!--  <item name="android:textAppearance">@style/TextLabelHint</item> -->
    </style>
    <style name="SignUpTextInputLayoutErrorInfo">
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <!--  <item name="android:textAppearance">@style/TextLabelHint</item> -->
    </style>

    <style name="TextfieldText">
        <item name="android:textSize">@dimen/general_textsize</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="PasswordHint">
        <item name="android:textSize">@dimen/general_textsize</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>

    <style name="TextfieldText.Error">
        <item name="android:textColor">@color/errorText</item>
        <item name="android:textColorHint">@color/errorText</item>
    </style>

    <!--BirthDate Dialog Theme -->

    <style name="MyDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- this is new -->
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/colorPrimary</item>
        <item name="android:calendarTextColor">@color/colorPrimaryDark</item>
        <item name="android:dayOfWeekBackground">@color/colorPrimaryDark</item>
        <item name="android:yearListSelectorColor">@color/colorPrimary</item>
      <!--  <item name="android:datePickerMode">spinner</item> --> <!-- todo this doesn't work for nougat, find another solution, also style this -->

        <!--<item name="android:minDate">01/01/2000</item> -->
    </style>

    <style name="InitialScreenViewPagerDescription">
        <item name="android:textSize">@dimen/login_signup_buttons_textsize</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingEnd">@dimen/general_marginleftright</item>
        <item name="android:paddingStart">@dimen/general_marginleftright</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="InitialScreenViewPagerTitle">
        <item name="android:textSize">@dimen/login_signup_buttons_textsize</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingEnd">@dimen/general_marginleftright</item>
        <item name="android:paddingStart">@dimen/general_marginleftright</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CreateEventTextView">
        <item name="android:textSize">@dimen/general_textsize</item>
        <item name="android:textColor">@color/createEventText</item>
    </style>

    <style name="CreateEvent2TitleTextView">
        <item name="android:textColor">@color/charcoal_grey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">@dimen/general_marginleftright</item>
        <item name="android:layout_marginRight">@dimen/general_marginleftright</item>
        <item name="android:maxLines">1</item>
    </style>





</resources>
