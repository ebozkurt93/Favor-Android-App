<resources>

    <!-- Base application theme. -->
    <style name="SignupLoginAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- For TextInputLayout Bottom Line Color -->
        <item name="colorControlNormal">@color/colorAccent</item>

        <!--todo remove this -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

    <style name="MainAppTextInputLayoutTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- For TextInputLayout Bottom Line Color -->
        <item name="colorAccent">@color/createEventText</item>
        <item name="colorControlNormal">@color/createEventText</item>
        <item name="colorControlActivated">@color/createEventText</item>
    </style>

    <!-- unlikely but may get deleted -->
    <style name="TextLabelHint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="InitialButtons">
        <item name="android:background">@drawable/initial_button_background</item>
        <item name="android:textSize">@dimen/general_textsize</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>


    <style name="LoginTexts.NoField">
        <item name="android:paddingEnd">@dimen/general_marginleftright</item>
        <item name="android:paddingStart">@dimen/general_marginleftright</item>

    </style>

    <style name="LoginTexts">
        <item name="android:textSize">@dimen/general_textsize</item>
    </style>

    <style name="LoginSignupButtons">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:layout_marginEnd">48dp</item>
        <item name="android:background">@drawable/login_signup_button_background</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>

        <item name="android:textSize">@dimen/login_signup_buttons_textsize</item>
        <item name="android:textAllCaps">false</item>

        <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textColor">@color/login_signup_button_state_text_color</item>
        <item name="android:stateListAnimator">@animator/login_signup_button_animator</item>
    </style>

    <!-- Zeplin Styles -->


    <style name="DescriptionText">
        <item name="android:textSize">@dimen/login_signup_buttons_textsize</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingEnd">@dimen/general_marginleftright</item>
        <item name="android:paddingStart">@dimen/general_marginleftright</item>
    </style>

    <style name="SignUpTextInputLayout">
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textSize">@dimen/login_signup_buttons_textsize</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingEnd">@dimen/general_marginleftright</item>
        <item name="android:paddingStart">@dimen/general_marginleftright</item>
        <item name="android:paddingBottom">8dp</item>
        <!--  <item name="android:textAppearance">@style/TextLabelHint</item> -->
    </style>

    <style name="SignUpTextInputLayoutError">
        <item name="android:textColorHint">@color/errorText</item>
        <item name="android:textColor">@color/errorText</item>
        <!--  <item name="android:textAppearance">@style/TextLabelHint</item> -->
    </style>

    <style name="SignUpTextInputLayoutErrorInfo">
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <!--  <item name="android:textAppearance">@style/TextLabelHint</item> -->
    </style>

    <style name="SignUpEditText">
        <item name="android:textSize">@dimen/general_textsize</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="PasswordHint">
        <item name="android:textSize">@dimen/general_textsize</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>
    <!--
        <style name="TextfieldText.Error">
            <item name="android:textColor">@color/errorText</item>
            <item name="android:textColorHint">@color/errorText</item>
        </style>
    -->
    <!--BirthDate Dialog Theme -->

    <style name="MyDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- this is new -->
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/colorPrimary</item>
        <item name="android:calendarTextColor">@color/colorPrimaryDark</item>
        <item name="android:dayOfWeekBackground">@color/colorPrimaryDark</item>
        <item name="android:yearListSelectorColor">@color/colorPrimary</item>
        <!--  <item name="android:datePickerMode">spinner</item> --> <!-- todo this doesn't work for nougat, find another solution, also style this -->

        <!--<item name="android:minDate">01/01/2000</item> -->
    </style>

    <style name="InitialScreenViewPagerDescription">
        <item name="android:textSize">@dimen/login_signup_buttons_textsize</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingEnd">@dimen/general_marginleftright</item>
        <item name="android:paddingStart">@dimen/general_marginleftright</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="InitialScreenViewPagerTitle">
        <item name="android:textSize">@dimen/login_signup_buttons_textsize</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingEnd">@dimen/general_marginleftright</item>
        <item name="android:paddingStart">@dimen/general_marginleftright</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CreateEventTextView">
        <item name="android:textSize">@dimen/general_textsize</item>
        <item name="android:textColor">@color/createEventText</item>
    </style>

    <style name="CreateEvent2TitleTextView">
        <item name="android:textColor">@color/charcoal_grey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">@dimen/general_marginleftright</item>
        <item name="android:layout_marginRight">@dimen/general_marginleftright</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="NowLaterRadioButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@drawable/now_later_selector_background</item>
        <item name="android:stateListAnimator">@animator/login_signup_button_animator</item>
        <item name="android:textColor">@drawable/now_later_selector_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="MainButtons">
        <item name="android:layout_marginStart">@dimen/general_marginleftright</item>
        <item name="android:layout_marginEnd">@dimen/general_marginleftright</item>
        <item name="android:background">@drawable/main_button_background</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>

        <item name="android:textSize">@dimen/login_signup_buttons_textsize</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textColor">@color/main_button_state_text_color</item>
        <item name="android:stateListAnimator">@animator/login_signup_button_animator</item>
    </style>

    <style name="EditProfileTextInputLayout">
        <item name="android:theme">@style/MainAppTextInputLayoutTheme</item>
        <item name="android:textColorHint">@color/createEventText</item>
        <item name="android:textSize">@dimen/login_signup_buttons_textsize</item>
        <item name="android:textColor">@color/createEventText</item>
        <item name="android:paddingEnd">@dimen/general_marginleftright</item>
        <item name="android:paddingStart">@dimen/general_marginleftright</item>
        <item name="android:paddingBottom">8dp</item>

        <!--  <item name="android:textAppearance">@style/TextLabelHint</item> -->
    </style>

    <style name="EditProfileEditText">
        <item name="android:textSize">@dimen/general_textsize</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/createEventText</item>
        <item name="android:textColorHint">@color/createEventText</item>
        <item name="android:paddingBottom">16dp</item>

    </style>

    <style name="EditProfilePasswordHint">
        <item name="android:textSize">@dimen/general_textsize</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/createEventText</item>
        <item name="android:textColorHint">@color/createEventText</item>
    </style>

    <style name="EditProfileTextInputLayoutErrorInfo">
        <item name="android:textColorHint">@color/createEventText</item>
        <item name="android:textColor">@color/createEventText</item>
        <!--  <item name="android:textAppearance">@style/TextLabelHint</item> -->
    </style>

    <style name="HomeSearchBar">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/searchbar_background</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/search_bar_hint_color</item>
        <item name="android:stateListAnimator">@animator/login_signup_button_animator</item>
    </style>

    <style name="EventDetailCardName">
        <item name="android:textColor">@color/charcoal_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:minHeight">23dp</item>
        <item name="android:maxHeight">25dp</item>
    </style>

    <style name="Points">
        <item name="android:textColor">@color/points_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@drawable/currency</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:minWidth">50dp</item>
    </style>

    <style name="Points.Background">
        <item name="android:background">@drawable/now_later_enabled_background</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>

</resources>
