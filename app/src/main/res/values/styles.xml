<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- For TextInputLayout Bottom Line Color -->
        <item name="colorControlNormal">@color/white</item>


    </style>
<!-- unlikely but may get deleted -->
    <style name="TextLabelHint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="InitialButtons">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="InitialSocialMediaButtons">
        <item name="android:background">@drawable/social_media_button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textColor">@color/teal</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_marginEnd">28dp</item>

    </style>

    <style name="LoginTexts.NoField">
        <item name="android:paddingEnd">28dp</item>
        <item name="android:paddingStart">28dp</item>

    </style>

    <style name="LoginTexts">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LoginSignupButtons">
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_marginEnd">28dp</item>
        <item name="android:background">#9b9b9b</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textColor">@color/teal</item>

    </style>

    <!-- Zeplin Styles -->

    <style name="LoginTextsPadding">
        <item name="android:paddingEnd">28dp</item>
        <item name="android:paddingStart">28dp</item>
    </style>

    <style name="DescriptionText">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="android:paddingStart">28dp</item>
    </style>

    <style name="PageTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SignUpTextInputLayout">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAppearance">@style/TextLabelHint</item>
    </style>

    <style name="TextfieldText">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="ButtonText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextfieldTextClicked">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
