<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/colorPrimary">



    <include
        android:id="@+id/sign_up_action_bar_include"
        layout="@layout/sign_up1_action_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/activity_forgot_password2_top_text"
        style="@style/DescriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/mail_sent_you"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_action_bar_include"/>

    <Button
        android:id="@+id/activity_forgot_password2_goto_mailbox_button"
        style="@style/LoginSignupButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/go_to_mailbox"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="250dp"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_action_bar_include"/>


</android.support.constraint.ConstraintLayout>