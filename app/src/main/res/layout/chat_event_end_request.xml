<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/chat_event_end_request_textview"
        style="@style/CreateEventTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Want to send end request?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/chat_event_end_request_imageview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:src="@color/apple_green"
        app:layout_constraintEnd_toStartOf="@+id/chat_event_end_request_textview"
        app:layout_constraintStart_toEndOf="@+id/chat_event_end_request_textview"
        app:layout_constraintTop_toBottomOf="@+id/chat_event_end_request_textview"/>

    <Button
        android:id="@+id/chat_event_end_request_button"
        style="@style/MainButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:text="Confirm"
        app:layout_constraintEnd_toStartOf="@+id/chat_event_end_request_imageview"
        app:layout_constraintStart_toEndOf="@+id/chat_event_end_request_imageview"
        app:layout_constraintTop_toBottomOf="@+id/chat_event_end_request_imageview"/>

</android.support.constraint.ConstraintLayout>