<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.ebozkurt.com.favor.CreateEvent1Activity">

    <TextView
        android:layout_width="0dp"
        android:layout_height="56dp"
        style="@style/CreateEventTextView"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/create_event"
        android:textColor="@color/colorAccent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/activity_create_event1_title_textview"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CreateEventTextView"
        android:text="Please select a category."
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_create_event1_title_textview"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.0"/>

<android.support.v7.widget.RecyclerView
    android:id="@+id/activity_create_event1_recyclerview"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@+id/textView2"
    android:layout_marginLeft="0dp"

    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginRight="0dp"
    app:layout_constraintRight_toRightOf="parent"/>

    <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
        android:id="@+id/activity_create_event1_bottom_navigation_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </com.aurelhubert.ahbottomnavigation.AHBottomNavigation>


</android.support.constraint.ConstraintLayout>
