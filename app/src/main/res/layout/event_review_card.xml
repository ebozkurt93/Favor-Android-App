<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="150dp"
             android:layout_marginLeft="8dp"
             android:layout_marginRight="8dp"
             android:background="@drawable/event_detail_card_background"
             android:maxWidth="400dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--
        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="360dp"/>-->

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/event_review_card_profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/berkin"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/linearLayout6"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/event_review_card_profile_image"
            app:layout_constraintLeft_toRightOf="@+id/event_review_card_profile_image"
            app:layout_constraintTop_toBottomOf="@+id/event_review_card_profile_image">

            <TextView
                android:id="@+id/event_review_card_reviewer_textview"
                style="@style/EventDetailCardName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:text="Reviewer Name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <!-- android:isIndicator="true" -->
            <android.ebozkurt.com.favor.views.CustomRatingBar
                android:id="@+id/event_detail_card_event_creator_rating"
                android:layout_width="80dp"
                android:layout_height="12dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event_review_card_reviewer_textview"
                app:onlyForDisplay="true"/>
        </android.support.constraint.ConstraintLayout>


        <TextView
            android:id="@+id/event_review_card_event_review_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="0dp"
            android:ellipsize="end"
            android:lines="3"
            android:maxLines="3"
            android:text="Some random event review text. Trying to keep it near 100 characters to see if it will fit nicely."
            android:textColor="@color/createEventText"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideLine2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6"/>

        <android.support.constraint.Guideline
            android:id="@+id/guideLine2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintGuide_end="65dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </android.support.constraint.Guideline>

        <View
            android:id="@+id/event_detail_card_view1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/event_detail_card_background"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/guideLine2"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/event_detail_card_view2"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/guideLine2"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/event_review_card_event_category"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:src="@drawable/ride"
            android:tint="@color/points_text"
            app:layout_constraintBottom_toTopOf="@+id/event_review_card_event_enddate_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/event_detail_card_view2"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/event_review_card_event_enddate_textview"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:gravity="center"
            android:text="May\n2017"
            android:textColor="@color/createEventText"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/event_review_card_event_points_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideLine2"
            app:layout_constraintTop_toBottomOf="@+id/event_review_card_event_category"/>

        <TextView
            android:id="@+id/event_review_card_event_points_textview"
            style="@style/Points"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:padding="0dp"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="@+id/event_detail_card_view1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideLine2"
            app:layout_constraintTop_toBottomOf="@+id/event_review_card_event_enddate_textview"/>


    </android.support.constraint.ConstraintLayout>


</FrameLayout>