<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_details_constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_details_profilepic_circleimageview"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/profile_pic"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/chat_details_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/chat_details_event_description_textview"
        app:layout_constraintStart_toEndOf="@+id/chat_details_profilepic_circleimageview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/chat_details_event_description_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/chat_details_name_textview"
        app:layout_constraintTop_toBottomOf="@+id/chat_details_name_textview"
        />

    <ImageView
        android:id="@+id/chat_details_category_icon_imageview"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ride"
        app:layout_constraintBottom_toTopOf="@+id/chat_details_last_message_time_textview"
        app:layout_constraintEnd_toStartOf="@id/chat_details_last_message_time_textview"
        app:layout_constraintStart_toEndOf="@+id/chat_details_last_message_time_textview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/chat_details_last_message_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="8dp"
        android:text="00:00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chat_details_category_icon_imageview"
        />
</android.support.constraint.ConstraintLayout>