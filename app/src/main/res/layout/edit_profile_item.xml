<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_profile_layout"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/edit_profile_item_icon_imageview"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:cropToPadding="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/profile"
        android:tint="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent"/>

    <TextView
        android:id="@+id/edit_profile_item_text_textview"
        style="@style/CreateEvent2TitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="0dp"
        android:ellipsize="end"
        android:text="@string/placeholder_long"
        app:layout_constraintBottom_toTopOf="@+id/edit_profile_item_icon_imageview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/edit_profile_item_icon_imageview"
        app:layout_constraintRight_toLeftOf="@+id/edit_profile_item_righticon_imageview"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_item_icon_imageview"/>

    <ImageView
        android:id="@+id/edit_profile_item_righticon_imageview"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_chevron_right_black_24dp"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/edit_profile_item_icon_imageview"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_item_icon_imageview"/>
</android.support.constraint.ConstraintLayout>